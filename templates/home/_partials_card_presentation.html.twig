				<div class="sub">{{ admin.adresse }}</div>
				<div class="sub">{{ admin.ville }}</div>
			</div>

			<div class="corner-logo">
				<img src="{{ asset('logo/logo_plombier.webp') }}" alt="logo">
			</div>
		</div>


