{# 

	<div class="title" aria-label="Azur 66 Plomberie">
		<div
			class="content">
			<!-- Avatar -->
			<div class="hero-photo-wrap">
				{% if admin.srcProfil %}
					<picture>
						<source type="image/webp" srcset="{{ asset('uploads/profiles/' ~ admin.srcProfil) }}">
						<img class="hero-photo" src="{{ asset('uploads/profiles/' ~ admin.srcProfil|replace({'.webp': '.jpg'})) }}" alt="photo de profil" width="128" height="128" loading="eager" decoding="async" onerror="this.onerror=null;this.src='{{ asset('placeholder-avatar.png') }}';">
					</picture>
				{% else %}
					<img class="hero-photo" src="{{ asset('placeholder-avatar.png') }}" alt="photo de profil" width="128" height="128">
				{% endif %}
			</div>

			<!-- Texte -->
			<div class="text-block min-w-0">
				<div class="">
					<h1>Azur 66 Plomberie</h1>
				</div>
