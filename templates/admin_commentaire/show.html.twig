{% extends 'base.html.twig' %}

{% block title %}Avis client{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-4">
            <div>
                <h1 class="h3 mb-1">Avis client</h1>
                <div class="text-muted">{{ admin_commentaire.author }}</div>
            </div>
            <div class="d-flex gap-2">
                <a class="btn btn-outline-secondary" href="{{ path('app_admin_commentaire_index') }}">Retour</a>
                <a class="btn btn-primary" href="{{ path('app_admin_commentaire_edit', {'id': admin_commentaire.id}) }}">Modifier</a>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <div class="row g-4">
                    <div class="col-12 col-md-6">
                        <div class="text-muted small">Source</div>
                        <div class="fw-semibold">
                            {{ admin_commentaire.source ? admin_commentaire.source.label|capitalize : '-' }}
                        </div>
                    </div>
                    <div class="col-12 col-md-3">
                        <div class="text-muted small">Note</div>
                        <div class="fw-semibold">{{ admin_commentaire.rating }}/5</div>
                    </div>
                    <div class="col-12 col-md-3">
                        <div class="text-muted small">Date</div>
                        <div class="fw-semibold">{{ admin_commentaire.date }}</div>
                    </div>
                    <div class="col-12">
                        <div class="text-muted small">Commentaire</div>
                        <div class="border rounded p-3 bg-light">{{ admin_commentaire.text }}</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-3">
            {{ include('admin_commentaire/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
